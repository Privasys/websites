{
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/.next": true,
        "**/out": true,
        "**/dist": true,
        "**/build": true,
        "**/coverage": true,
        "**/.yarn": true,
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "always",
        "source.sortPackageJson": "always"
    },
    "css.format.enable": false,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "eslint.useFlatConfig": true,
    "editor.detectIndentation": false,
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "workbench.colorCustomizations": {
        "titleBar.activeBackground": "#405efa",
        "titleBar.activeForeground": "#ffffff",
        "titleBar.inactiveBackground": "#2d45bb",
        "titleBar.inactiveForeground": "#edfaff"
    },
    "typescript.tsdk": "node_modules\\typescript\\lib",
    "git.ignoreLimitWarning": true
}